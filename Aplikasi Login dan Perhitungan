    private void jTextField1ActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        String USERNAME ="Rada";
        String PASSWORD ="202013016";
        if(USERNAME.equalsIgnoreCase(jTextField1.getText()) && PASSWORD.equalsIgnoreCase(jPasswordField1.getText())) {
                
                this.setVisible(false);
                    new perhitungan().setVisible (true);
               }else{
            
                    javax.swing.JOptionPane.showMessageDialog(null,"MAAF USERNAME DAN PASSWORD SALAH !!");
                    jTextField1.setText("");
                    jPasswordField1.setText("");
                    jTextField1.requestFocus();     
                        }
    }                                           

    
    private void jEXITActionPerformed(java.awt.event.ActionEvent evt) {                                      
