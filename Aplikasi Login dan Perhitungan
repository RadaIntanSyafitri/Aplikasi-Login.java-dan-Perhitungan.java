    private void kosongkanActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        jnilai1.setText("");
        jnilai2.setText("");
        jhasil.setText("");
    }                                         

    private void keluarActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
